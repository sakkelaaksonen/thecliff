        <!-- Footer -->
        <footer id="contact" class="bg-neutral-900 border-t border-cliff-carmine py-12">
            <div class="max-w-7xl mx-auto px-6 md:px-12">
                <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                    <div class="space-y-4">
                        <h3 class="text-xl font-bold text-cliff-carmine-bright mb-4">Contact</h3>
                        <div class="space-y-3 text-gray-300">
                            <div class="flex items-start space-x-3">
                                <svg class="w-5 h-5 text-cliff-carmine mt-0.5 flex-shrink-0" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                <div>
                                    <p class="font-semibold">Address</p>
                                    <a href="{{ config.footer.contact.address.mapsUrl }}"
                                        target="_blank" rel="noopener noreferrer" class="address-link"
                                        aria-label="Open location in Google Maps">
                                        <span class="block">{{ config.footer.contact.address.street }}</span>
                                        <span class="block">{{ config.footer.contact.address.postal }}</span>
                                        <span class="block text-xs text-cliff-carmine-light mt-1">
                                            <svg class="w-3 h-3 inline-block mr-1" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                            </svg>
                                            View on Google Maps
                                        </span>
                                    </a>
                                </div>
                            </div>

                            <div class="flex items-start space-x-3">
                                <svg class="w-5 h-5 text-cliff-carmine mt-0.5 flex-shrink-0" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                                <div>
                                    <p class="font-semibold">Phone</p>
                                    <p>{{ config.footer.contact.phone }}</p>
                                </div>
                            </div>

                            <div class="flex items-start space-x-3">
                                <svg class="w-5 h-5 text-cliff-carmine mt-0.5 flex-shrink-0" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                <div>
                                    <p class="font-semibold">Email</p>
                                    <p>{{ config.footer.contact.email }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Opening Hours -->
                    <div class="space-y-4">
                        <h3 class="text-xl font-bold text-cliff-carmine-bright mb-4">Opening Hours</h3>
                        <div class="space-y-3 text-sm text-gray-300">
                            {% for hour in config.footer.hours %}
                            <div class="flex justify-between">
                                <span>{{ hour.days }}</span>
                                <span class="text-white">{{ hour.time }}</span>
                            </div>
                            {% endfor %}
                        </div>

                        <div class="mt-6 p-4 bg-card-bg rounded-lg border border-cliff-carmine/30">
                            <p class="text-sm text-gray-300">
                                <span class="text-cliff-carmine-bright font-semibold">Kitchen closes</span>
                                at {{ config.footer.kitchenCloses }}.
                            </p>
                        </div>

                        <div class="mt-6">
                            <h4 class="text-sm font-semibold text-white mb-3">Follow Us</h4>
                            <div class="flex space-x-4">
                                {% for social in config.footer.social %}
                                <a href="{{ social.url }}"
                                    class="text-gray-300 hover:text-cliff-carmine-light transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-cliff-carmine-light rounded-lg p-1"
                                    aria-label="Follow us on {{ social.name }}" target="_blank">
                                    {% if social.icon == "facebook" %}
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                        <path
                                            d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                                    </svg>
                                    {% elif social.icon == "instagram" %}
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                        <path
                                            d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323C5.902 8.198 7.053 7.708 8.35 7.708s2.448.49 3.323 1.297c.897.875 1.387 2.026 1.387 3.323s-.49 2.448-1.297 3.323c-.875.897-2.026 1.387-3.323 1.387z" />
                                    </svg>
                                    {% endif %}
                                </a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <!-- Business Info -->
                    <div class="space-y-4">
                        <h3 class="text-xl font-bold text-cliff-carmine-bright mb-4">The Cliff</h3>
                        <p class="text-gray-300 text-sm leading-relaxed">
                            {{ config.footer.business.description }}
                        </p>

                        <div class="space-y-3 text-sm text-gray-300">
                            <div>
                                <span class="text-white font-semibold">Established:</span> {{ config.footer.business.established }}
                            </div>
                            <div>
                                <span class="text-white font-semibold">Capacity:</span> {{ config.footer.business.capacity }}
                            </div>
                            <div>
                                <span class="text-white font-semibold">Music:</span> {{ config.footer.business.music }}
                            </div>
                        </div>

                        <div class="mt-6 p-3 bg-cliff-carmine/10 rounded-lg border border-cliff-carmine/30">
                            <p class="text-xs text-gray-300">
                                <span class="text-cliff-carmine-bright font-semibold">Age Restriction:</span>
                                {{ config.footer.business.ageRestriction }}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Bottom Bar -->
                <div class="mt-12 pt-8 border-t border-gray-700">
                    <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
                        <div class="text-sm text-gray-400">
                            <p>{{ config.footer.copyright }}</p>
                        </div>

                        <div class="flex space-x-6 text-sm text-gray-400 hidden">
                            <a href="#"
                                class="hover:text-cliff-carmine-light transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-cliff-carmine-light rounded-lg px-2 py-1">Privacy
                                Policy</a>
                            <a href="#"
                                class="hover:text-cliff-carmine-light transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-cliff-carmine-light rounded-lg px-2 py-1">Terms
                                of Service</a>
                            <a href="#"
                                class="hover:text-cliff-carmine-light transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-cliff-carmine-light rounded-lg px-2 py-1">Accessibility</a>
                        </div>

                        <div class="text-sm text-gray-400">
                            <p>Designed by <span class="text-cliff-carmine-bright">{{ config.footer.designer }}</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>