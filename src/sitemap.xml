---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for page in collections.sitemap %}
  <url>
    <loc>{{ config.siteUrl.production }}{{ page.url | url }}</loc>
    {%- if page.date %}
    <lastmod>{{ page.date | date('YYYY-MM-DD') }}</lastmod>
    {%- endif %}
    <changefreq>{% if page.url == '/' %}weekly{% else %}monthly{% endif %}</changefreq>
    <priority>{% if page.url == '/' %}1.0{% else %}0.8{% endif %}</priority>
  </url>
{%- endfor %}
</urlset> 