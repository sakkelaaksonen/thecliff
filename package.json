{
  "name": "thecliff",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:js && eleventy && npm run copy:php",
    "build:assets": "npm run build:css & npm run build:js & wait",
    "build:css": "tailwindcss -i ./src/css/main.css -o ./htdocs/css/main.css --minify",
    "build:js": "API_BASE_URL='' esbuild src/js/main.js --bundle --outfile=htdocs/js/main.js --format=esm --minify --define:process.env.API_BASE_URL='\"\"'",
    "build:js:dev": "API_BASE_URL='http://localhost:8080' esbuild src/js/main.js --bundle --outfile=htdocs/js/main.js --format=esm --define:process.env.API_BASE_URL='\"http://localhost:8080\"'",
    "copy:php": "mkdir -p htdocs/admin htdocs/api && cp -r php-src/admin/* htdocs/admin/ && cp -r php-src/api/* htdocs/api/",
    "dev": "eleventy --serve --port=8081",
    "dev:php": "cd htdocs && php -S localhost:8080",
    "dev:all": "npm run build:css && npm run build:js:dev && concurrently --names \"11ty,PHP\" --prefix-colors \"blue,yellow\" \"npm run dev\" \"npm run dev:php\"",
    "watch:css": "tailwindcss -i ./src/css/main.css -o ./htdocs/css/main.css --watch",
    "watch:js": "esbuild src/js/main.js --bundle --outfile=htdocs/js/main.js --format=esm --watch",
    "deploy": "npm run build && node scripts/deploy.js",
    "deploy:verify": "node scripts/deploy.js --verify-only",
    "deploy:test": "node scripts/deploy.js --test-connection"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.0"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@tailwindcss/cli": "^4.1.8",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.5",
    "mustache": "^4.2.0",
    "tailwindcss": "^4.1.8"
  }
}
