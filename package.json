{
  "name": "thecliff",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "npm run build:assets && eleventy",
    "build:assets": "npm run build:css & npm run build:js & wait",
    "build:css": "tailwindcss -i ./src/css/main.css -o ./htdocs/css/main.css --minify",
    "build:js": "esbuild src/js/main.js --bundle --outfile=htdocs/js/main.js --format=esm --minify",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"eleventy --serve --watch\"",
    "watch:css": "tailwindcss -i ./src/css/main.css -o ./htdocs/css/main.css --watch",
    "watch:js": "esbuild src/js/main.js --bundle --outfile=htdocs/js/main.js --format=esm --watch"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.0"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@tailwindcss/cli": "^4.1.8",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.5",
    "mustache": "^4.2.0",
    "tailwindcss": "^4.1.8"
  }
}
